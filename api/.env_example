# Application Environment
APP_ENV=Ai-Champ
APP_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173
API_URL=http://localhost:8000
APP_DEBUG=true
APP_NAME=ScholarCompare

# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=DB
DB_USER=USERNAME
DB_PASS=PASSWORD

# For shared hosting production (uncomment and configure):
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com  # e.g., smtp.yourdomain.com or mail.yourdomain.com
MAIL_PORT=587                 # or 465 for SSL
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls           # or ssl

# JWT Configuration
JWT_SECRET=JWTTOKEN

# Rate Limiting
RATE_LIMIT_ENABLED=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Email Configuration
MAIL_FROM_ADDRESS=noreply@scholarcompare.com
MAIL_FROM_NAME="ScholarCompare"

# Email Verification Settings
EMAIL_VERIFICATION_TOKEN_EXPIRY=24  # Hours
EMAIL_VERIFICATION_TEMPLATE_PATH=./template

# Frontend URL Configuration
FRONTEND_VERIFY_EMAIL_PATH=/verify-email
FRONTEND_RESET_PASSWORD_PATH=/reset-password
FRONTEND_LOGIN_PATH=/login
FRONTEND_REGISTER_PATH=/register
FRONTEND_PROFILE_PATH=/profile
FRONTEND_DASHBOARD_PATH=/dashboard
FRONTEND_SETTINGS_PATH=/settings

# AI Configuration
AIML_API_KEY=KEY

